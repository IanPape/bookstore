{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "handle": {
      "type": "string",
      "minLength": 1,
      "description": "A unique string identifier for the job."
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "salary": {
      "type": "number",
      "minimum": 0
    },
    "equity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "companyHandle": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["handle", "title", "salary", "equity", "companyHandle"],
  "additionalProperties": false
}
